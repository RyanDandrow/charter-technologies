<h2>Contacts</h2>

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= sort_link "Name", :full_name %></th>
			<th><%= sort_link "Company", :company %></th>
			<th><%= sort_link "Cell Phone", :cell_phone %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @contacts.each do |contact| %>
		<tr>
			<td><%= table_cell_link contact.full_name, contact_path(contact) %></td>
			<td><%= table_cell_link contact.company, contact_path(contact) %></td>
			<td><%= table_cell_link contact.cell_phone, contact_path(contact) %></td>
			<td class="delete">
				<%= link_to(show_row_icon("trash"), contact_path(contact), :method => :delete, :data => { :confirm => "Are you sure you want to delete this contact?" }) %>
			</td>
		</tr>
	<% end %>
</table>

<%= content_for :sidebar do %>
	<li><%= link_to "#{show_icon "plus-sign"}Add a new contact".html_safe, new_contact_path %></li>
<% end %>
