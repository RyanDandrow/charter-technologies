<%= form_for @contact do |f| %>
	<div class="container-fluid">
	    <div class="row">
	        <div class="col-lg-3">
	            <div class="form-group">          
	                <%= f.label "Company:", class: "form-label" %>
	                <%= f.text_field :company, class: "form-control" %>
	            </div>
	        </div>
	        <div class="col-lg-3">
	            <div class="form-group">          
	                <%= f.label "Cell Phone:", class: "form-label" %>
	                <%= f.text_field :cell_phone, class: "form-control" %>
	            </div>
	        </div>
	        <div class="col-lg-3">
	            <div class="form-group">          
	                <%= f.label "Goes by:", class: "form-label" %>
	                <%= f.text_field :goes_by, class: "form-control" %>
	            </div>
	        </div>
	        <div class="col-lg-3">
	            <div class="form-group">          
	                <%= f.label :sf_id, "SF ID#", class: "form-label" %>
	                <%= f.text_field :sf_id, class: "form-control" %>
	            </div>
	        </div>
            <div class="col-md-3 col-sm-4">
                <div class="form-group">
                    <%= f.label :tax_id, 'Tax ID#', class: "form-label" %>
                    <%= f.text_field :tax_id, class: "form-control", id: "tax_id" %>
                    <script type="text/javascript">
                        $(document).ready(function(){
                            $('#tax_id').mask('00-0000000', {placeholder: "00-0000000"});
                        });
                    </script>
                </div>
            </div>
            <div class="col-md-3 col-sm-4">
                <div class="form-group">
                    <%= f.label :drivers_License, 'DL#', class: "form-label" %>
                    <%= f.text_field :drivers_license, class: "form-control" %>
                 </div>
            </div>
	        <div class="col-lg-12">
	            <div class="form-group">          
	                <%= f.label :additional_info, "Additional Info:", class: "form-label" %>
	                <%= f.text_field :additional_info, class: "form-control", :rows => 5 %>
	            </div>
	        </div>
	    </div>
	</div>

	<p class="submits">
		<%= link_to 'Cancel', contacts_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit "Add new contact", :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>
