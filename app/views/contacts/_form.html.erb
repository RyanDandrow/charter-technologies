<%= form_for @contact do |f| %>
	<div class="container-fluid">
	    <div class="row">
	        <div class="col-lg-5">
	            <div class="form-group">          
	                <%= f.label "Company:", class: "form-label" %>
	                <%= f.text_field :company, class: "form-control" %>
	            </div>
	        </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <%= f.label :tax_id, 'Tax ID #', class: "form-label" %>
                    <%= f.text_field :tax_id, class: "form-control", id: "tax_id" %>
                    <script type="text/javascript">
                        $(document).ready(function(){
                            $('#tax_id').mask('00-0000000', {placeholder: "00-0000000"});
                        });
                    </script>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <%= f.label :drivers_License, 'Drivers License #', class: "form-label" %>
                    <%= f.text_field :drivers_license, class: "form-control" %>
                 </div>
            </div>
	        <div class="col-lg-2">
	            <div class="form-group">          
	                <%= f.label :sf_id, "SF ID#", class: "form-label" %>
	                <%= f.text_field :sf_id, class: "form-control" %>
	            </div>
	        </div>
	    </div>

	    <div class="row">
	        <div class="col-md-4 col-sm-4">
	            <%= f.label :name, 'Name:', class: "form-label" %>
	            <div class="form-group" id="highlight2">  
	                <%= f.text_field :first_name, class: "form-control first" %>
	                <%= f.text_field :middle_name, class: "form-control middle" %>
	                <%= f.text_field :last_name, class: "form-control last" %>
	            </div>
	        </div>
	        <div class="col-md-1 suffix">
	            <div class="form-group">
	                <%= f.select :name_suffix, ['', 'Sr', 'Jr', 'II', 'III'] %>
	            </div>
	        </div>
	        <div class="col-lg-2">
	            <div class="form-group">          
	                <%= f.label "Goes by:", class: "form-label" %>
	                <%= f.text_field :goes_by, class: "form-control" %>
	            </div>
	        </div>
	         <div class="col-lg-2">
	            <div class="form-group">
	                <%= f.label :date_of_birth, 'D.O.B.', class: "form-label" %>
	                <%= f.text_field :date_of_birth, class: "form-control", id: "date" %>
	                <script type="text/javascript">
	                    $(document).ready(function(){
	                        $('#date').mask('00/00/0000', {placeholder: "mm/dd/yyyy"});
	                    });
	                </script>
	            </div>
	        </div>
	    </div>

	    <div class="row">
	        <div class="col-md-4 col-sm-4">
	        <%= f.label 'Spouse Name:', class: "form-label" %>
	            <div class="form-group">
	                <%= f.text_field :spouse_first_name, class: "form-control first" %>
	                <%= f.text_field :spouse_middle_name, class: "form-control middle" %>
	                <%= f.text_field :spouse_last_name, class: "form-control last" %>
	            </div>
	        </div>
            <div class="col-lg-2 col-md-offset-1">
                <div class="form-group">
                    <%= f.label :spouse_goes_by, 'Spouse Goes By:', class: "form-label" %>
                    <%= f.text_field :spouse_goes_by, class: "form-control" %>
                </div>
            </div>
	         <div class="col-lg-2">
	            <div class="form-group">
	                <%= f.label :spouse_date_of_birth, 'Spouse D.O.B.', class: "form-label" %>
	                <%= f.text_field :spouse_date_of_birth, class: "form-control", id: "date2" %>
	                <script type="text/javascript">
	                    $(document).ready(function(){
	                        $('#date2').mask('00/00/0000', {placeholder: "mm/dd/yyyy"});
	                    });
	                </script>
	            </div>
	        </div>
		</div>
	</div>

    <div class="row">
        <div class="col-lg-2">
            <div class="form-group">          
                <%= f.label "Cell:", class: "form-label" %>
                <%= f.text_field :cell_phone, class: "form-control", id: "phone1" %>
                <script type="text/javascript">
                    $(document).ready(function(){
                        $('#phone1').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
                    });
                </script>
            </div>
            <div class="form-group">          
                <%= f.label "Spouse Cell:", class: "form-label" %>
                <%= f.text_field :spouse_cell_phone, class: "form-control", id: "phone2" %>
           		<script type="text/javascript">
                    $(document).ready(function(){
                        $('#phone2').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
                    });
                </script>
            </div>
	        <div class="form-group">
	            <%= f.label :company_phone, 'Company Phone:', class: "form-label" %>
	            <%= f.text_field :company_phone, class: "form-control", id: "phone3" %>
	            <script type="text/javascript">
	                $(document).ready(function(){
	                    $('#phone3').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
	                });
	            </script>
	        </div>
	        <div class="form-group">
	            <%= f.label :home_phone, 'Home Phone:', class: "form-label" %>
	            <%= f.text_field :home_phone, class: "form-control", id: "phone4" %>
	            <script type="text/javascript">
	                $(document).ready(function(){
	                    $('#phone4').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
	                });
	            </script>
	        </div>
			<div class="form-group">
                <%= f.text_field :alt_phone_1_place, placeholder: 'Alt Phone 1:', class: "form-label" %>
                <%= f.text_field :alt_phone_1, class: "form-control", id: "altphone" %>
                <script type="text/javascript">
                    $(document).ready(function(){
                        $('#altphone').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
                    });
                </script>
	        </div>
	        <div class="form-group">
                <%= f.text_field :alt_phone_2_place, placeholder: 'Alt Phone 2:', class: "form-label" %>
                <%= f.text_field :alt_phone_2, class: "form-control", id: "altphone2" %>
                <script type="text/javascript">
                    $(document).ready(function(){
                        $('#altphone2').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
                    });
                </script>
	        </div>
	        <div class="form-group">
                <%= f.text_field :alt_phone_3_place, placeholder: 'Alt Phone 3:', class: "form-label" %>
                <%= f.text_field :alt_phone_3, class: "form-control", id: "altphone3" %>
                <script type="text/javascript">
                    $(document).ready(function(){
                        $('#altphone3').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
                    });
                </script>
	        </div>
	        <div class="form-group">
                <%= f.text_field :alt_phone_4, placeholder: 'Alt Phone 4:', class: "form-label" %>
                <%= f.text_field :alt_phone_4_place, class: "form-control", id: "altphone4" %>
                <script type="text/javascript">
                    $(document).ready(function(){
                        $('#altphone4').mask('(000)-000-0000', {placeholder: "(000)-000-0000"});
                    });
                </script>
	        </div>
	    </div>
	</div>
	
    <div class="row">
        <div class="col-md-5 col-sm-4">
            <div class="form-group">
                <%= f.label :email, 'Email:', class: "form-label" %>
                <%= f.text_field :email, class: "form-control" %>
            </div>
        </div>         
        <div class="col-md-5 col-sm-4 col-lg-offset-1">
            <div class="form-group">
                <%= f.label :spouse_email, 'Spouse Email:', class: "form-label" %>
                <%= f.text_field :spouse_email, class: "form-control" %>
            </div>
        </div> 
    </div>
		
		<div class="row">
	        <div class="col-lg-12">
	            <div class="form-group">          
	                <%= f.label :additional_info, "Additional Info:", class: "form-label" %>
	                <%= f.text_field :additional_info, class: "form-control", :rows => 5 %>
	            </div>
	        </div>
	    </div>


	<p class="submits">
		<%= link_to 'Cancel', contacts_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit "Add new contact", :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>
