<div class="comment" id="comment-<%= comment.id %>">
  <div class="well">
    <%= link_to "×", comment_path(comment), :method => :delete, :remote => true, :data => { :confirm => "Are you sure you want to delete this comment?" }, :disable_with => "×", :class => 'close' %>
    <h4>
      <small>
        <p class="text-muted"><%= comment.root? ? "By" : "Replied by" %> <strong><%= comment.user_id %></strong> on
        <%= l(comment.created_at, format: '%A, %B %d, %Y at %I:%M %p') %></p>
      </small>
    </h4>
    <hr/>
    <p>
      <%= comment.body %>
    </p>
  </div>
</div>