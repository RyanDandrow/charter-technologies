<h2>Add a new user</h2>

<%= form_for @admin_user do |f| %>

	<div class="row">
  		<div class="col-lg-4 col-md-offset-4">
  			<%= f.label "Email:", class: "form-group" %>
			<%= f.text_field :email, class: "form-control" %>
		</div>



  		<div class="col-lg-4 col-md-offset-4">
  			<%= f.label "Name", class: "form-group" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

  		<div class="col-lg-4 col-md-offset-4">
  			<%= f.label "Access Level", class: "form-group" %>
			<%= f.select :access_level, get_access_level_array, class: "form-control" %>
		</div>

  		<div class="col-lg-4 col-md-offset-4">
  			<%= f.label "Password", class: "form-group" %>
			<%= f.password_field :password, class: "form-control" %>
		</div>

		<div class="col-lg-4 col-md-offset-4">
			<%= f.label "Repeat Password", class: "form-group" %>
			<%= f.password_field :password_confirmation, class: "form-control" %>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="col-md-offset-4 col-md-4">
			<p class="submits">
				<%= link_to 'Cancel', admin_users_path, :class => 'btn btn-mini btn-danger' %>
				<%= f.submit "Add new user", :class => "btn btn-mini btn-primary" %>
			</p>
		</div>
	</div>

<% end %>
